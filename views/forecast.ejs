<body>
    <h1>Your Local Forecast</h1>
<%- include('header') %>
    <button class="button" onclick="showCelsius()">Show Celsius</button>
    <button class="button" onclick="showFahrenheit()">Show Fahrenheit</button>
    <div id="weather-display">
        <!-- Use ejs to output weather data that results from the api call in app.js file-->
        <%= weather %>
        <p id="c"><%= celsius%>ยบ</p>
        <p id="f"><%= fahrenheit%>ยบ</p>
        <!--Remove soon and use javascript to logic out what icon show -->
        <i class="wi wi-day-sunny"></i>
    </div>
    <div>
      
    </div>
    <script>
        // This is the default display before any button is clicked
          document.getElementById("c").style.display = "none";

        function showCelsius() {
                document.getElementById("f").style.display = "none";
                 document.getElementById("c").style.display = "block";

        }
         function showFahrenheit() {
                document.getElementById("f").style.display = "block";
                document.getElementById("c").style.display = "none";

            }
    </script>
</body>
